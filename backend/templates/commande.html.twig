{% extends 'base.html.twig' %}
{% block body %}
				<header id="header" class="col-full">
					<div id="logo">
						<h1 class="site-title">Site web marchand</h1>
					</div>
				</header>
				<main>

					  <form action="effectuerAchat" method="POST" class="form-payement">
            <label for="card-name">Nom sur la carte</label>
            <input type="text" id="card-name" name="card-name" >

            <label for="card-number">Numéro de carte</label>
            <input type="number" id="card-number" name="card-number" >

            <label for="expiry-date">Date d'expiration</label>
            <input type="date" id="expiry-date" name="expiry-date" >

            <label for="cvv">CVV</label>
            <input type="number" id="cvv" name="cvv" >

            <label for="email">Adresse e-mail</label>
            <input type="email" id="email" name="email" >

            <label for="phone">Numéro de téléphone</label>
            <input type="tel" id="phone" name="phone" >

            <label for="billing-address">Adresse de facturation</label>
            <input type="text" id="billing-address" name="billing-address" required>

            <input class="submit-payment" type="submit" value="Payer maintenant">
	       </form>

  <style>

        .form-payement {
            width: 30%;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        label {
            font-size: 16px;
            margin: 5px 0;
            display: block;
        }
        input[type="text"], input[type="email"], input[type="number"], input[type="date"], input[type="tel"], input[type="password"] {
            width: 100%;
            padding: 6px;
            margin: 8px 0;
            border-radius: 4px;
            border: 1px solid #ccc;
        }
        input[type="submit"] {
            width: 100%;
            padding: 12px;
            background-color: #4CAF50;
            border: none;
            color: white;
            font-size: 16px;
            cursor: pointer;
            border-radius: 4px;
        }
        input[type="submit"]:hover {
            background-color: #45a049;
        }

		.submit-payement {
			margin: 10px 0 0 0;
		}
    </style>
				</main>
{% endblock %}
